<p id="notice"><%= notice %></p>

<h1>Mentors</h1>

<table>
  <thead>
    <tr>
      <th>Image</th>
      <th>Email</th>
      <th>Name</th>
      <th>Age</th>
      <th>Mentor type</th>
      <th>Description</th>
      <th>Question</th>
      <th>Interests</th>
      <th>Location</th>
      <th>Langitude</th>
      <th>Latitude</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @mentors.each do |mentor| %>
      <tr>
        <td><%= image_tag mentor.image %></td>
        <td><%= mentor.name %></td>
        <td><%= mentor.age %></td>
        <td><%= mentor.mentor_type %></td>
        <td><%= mentor.description %></td>
        <td><%= mentor.question %></td>
        <td><%= mentor.interests %></td>
        <td><%= mentor.location %></td>
        <td><%= mentor.langitude %></td>
        <td><%= mentor.latitude %></td>
        <td><%= link_to 'Show', mentor %></td>
        <td><%= link_to 'Edit', edit_mentor_path(mentor) %></td>
        <td><%= link_to 'Destroy', mentor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

